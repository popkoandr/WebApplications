@{
    //Layout = null; // master page won't be apply to that view
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>


<div>
    <h3>Распродажа книг</h3>
    <table>
        <tr>
            <td>
                <p>Название книги</p>
            </td>
            <td>
                <p>Автор</p>
            </td>
            <td>
                <p>Цена</p>
            </td>
            <td></td>
        </tr>
        @foreach (var b in ViewBag.Books) //Razor syntax
        {
            <tr>
                <td>
                    <p>@b.Name</p>
                </td>
                <td>
                    <p>@b.Author</p>
                </td>
                <td>
                    <p>@b.Price</p>
                </td>
                <td>
                    <p>
                        <a href="/Home/Buy/@b.Id">Купить</a>
                    </p>
                </td>
            </tr>
        }
    </table>
</div> <hr/>

<form method="post" action="@Url.Action("GetImage")">
    <div>
        <label for="file">Choose file to upload</label>
        <input type="file" id="file" accept="image/png, image/jpeg" name="pathToPhoto" multiple>
        <input type="submit" value="Submit"/>
    </div>

</form>
